{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components": [
        "components"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/typechain": [
        "typechain"
      ],
    },
    "noImplicitAny": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "./web3/scripts",
    "./web3/test",
    "./typechain",
    "**/*.ts",
    "**/*.tsx"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "__test__"
  ]
}
